<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_resultat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pierrick.happy_calcul.resultat">


    <ImageButton
        style = "@style/btnHome"
        android:id="@+id/imageButton_home_table"
        android:onClick="test"
        />

    <TextView
        android:text="18 / 20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="113dp"
        android:id="@+id/textView_score_final"
        android:textSize="60sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_resultat_droite"
        android:textSize="33sp"
        android:text="test"
        android:layout_alignBaseline="@+id/textView_resultat_gauche"
        android:layout_alignBottom="@+id/textView_resultat_gauche"
        android:layout_toEndOf="@+id/textView_score_final" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="146dp"
        android:id="@+id/textView_resultat_gauche"
        android:textSize="33sp"
        android:text="test"
        android:layout_marginEnd="13dp"
        android:layout_below="@+id/textView_resultat_final"
        android:layout_toStartOf="@+id/textView_score_final" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/logo"
        android:layout_marginTop="32dp"
        android:id="@+id/imageView_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp" />

    <TextView
        android:text="RESULTATS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView_resultat_final"
        android:textSize="50sp"
        android:layout_below="@+id/imageView_logo"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/bulle"
        android:id="@+id/imageView_bulle"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView_logo" />

    <TextView
        android:text="Nouveau niveau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/textView_nouveau"
        android:layout_below="@+id/textView_bravo"
        android:layout_toEndOf="@+id/imageView_logo"
        android:layout_marginStart="41dp" />

    <TextView
        android:text="Bravo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textSize="30sp"
        android:id="@+id/textView_bravo"
        android:layout_alignTop="@+id/imageView_logo"
        android:layout_alignStart="@+id/textView_resultat_final"
        android:layout_marginStart="14dp" />


</RelativeLayout>
