<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pierrick.happy_calcul">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".connexion"

            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".new_user"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".page_calcul"
            android:windowSoftInputMode="stateAlwaysVisible"
            android:screenOrientation="portrait"/>
        <activity android:name=".tables"
            android:screenOrientation="portrait"/>
        <activity android:name=".apprentissage"
            android:screenOrientation="portrait"/>
        <activity android:name=".choix_jeux"
            android:screenOrientation="portrait"/>
        <activity android:name=".resultat"
            android:screenOrientation="portrait"/>
        <activity android:name=".listeUtilisateurs"
            android:screenOrientation="portrait"/>
        <activity android:name=".profil_activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".historique"
            android:screenOrientation="portrait"/>
        <activity android:name=".historique_detaille"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>